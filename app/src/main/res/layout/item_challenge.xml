<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7.5dp"
    app:cardElevation="0.5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#F1F3F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge Name"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"/>

            <TextView
                android:id="@+id/tv_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Created 2 hour ago"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway"/>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="07:00 - 09:00"
                android:textSize="16sp"
                android:textColor="#3A589C"
                android:fontFamily="@font/raleway_bold"/>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_delete"
                android:drawableTint="@color/red"
                android:text="Delete Challenge"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:fontFamily="@font/raleway_bold"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_close"
            app:tint="@color/red" />

    </LinearLayout>

</androidx.cardview.widget.CardView>