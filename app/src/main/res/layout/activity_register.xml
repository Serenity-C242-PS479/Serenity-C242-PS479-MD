<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/login_register_cover"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#D1D1D2"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_primary_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_secondary_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="@id/cv_primary_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Register"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/raleway"
                    android:text="Please fill the form to create an account"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Fullname"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <com.serenity.serenityapp.ui.component.FormEditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/edit_text_border"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway_light"
                    android:hint="John Doe"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Age (years)"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <com.serenity.serenityapp.ui.component.FormEditText
                    android:id="@+id/edt_age"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/edit_text_border"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:fontFamily="@font/raleway_light"
                    android:hint="Your age"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/edt_gender"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/edit_text_border"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway_light"
                    android:entries="@array/gender_entries"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <com.serenity.serenityapp.ui.component.EmailEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/edit_text_border"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway_light"
                    android:hint="john.doe@gmail.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <com.serenity.serenityapp.ui.component.PasswordEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/edit_text_border"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway_light"
                    android:hint="••••••••"/>

                <com.serenity.serenityapp.ui.component.RegisterButton
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Login"
                    android:enabled="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/raleway"/>

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="Login"
                        android:textSize="14sp"
                        android:textColor="@color/primaryDark"
                        android:fontFamily="@font/raleway_bold" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>