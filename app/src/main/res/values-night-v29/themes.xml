<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Serenity" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryInverse">@color/primaryInverse</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primaryDark</item>
        <item name="colorOnSecondary">@color/primary</item>

        <item name="colorPrimaryContainer">@color/primaryLight</item>
        <item name="colorOnPrimaryContainer">@color/primaryDark</item>

        <item name="colorSurfaceContainer">@color/grayLight</item>
        <item name="colorSecondaryContainer">@color/primaryLight</item>
        <item name="colorOnSurfaceVariant">@color/primary</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorOnSecondaryContainer">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>